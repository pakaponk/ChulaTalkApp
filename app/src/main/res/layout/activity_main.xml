<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ffffffff">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/usernameTextField"
        android:layout_below="@+id/appLogo"
        android:layout_marginTop="41dp"
        android:hint="StudentID"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="159dp"
        android:id="@+id/appLogo"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/chulatalkapp"
        android:contentDescription="ChulaTalk Logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordTextField"
        android:layout_below="@+id/usernameTextField"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="IT Chula Password" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log in"
        android:id="@+id/loginButton"
        android:layout_below="@+id/passwordTextField"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/passwordTextField"
        android:layout_alignStart="@+id/passwordTextField"
        android:layout_alignRight="@+id/passwordTextField"
        android:layout_alignEnd="@+id/passwordTextField"
        android:onClick="loginButtonClicked" />
</RelativeLayout>
